<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGreen"
    tools:context="mobapptut.com.camera2videoimage.WelcomeActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo2"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitStart"
        android:padding="30dp"
        android:onClick="true"
        android:background="@null" />

    <TextView
        android:text="Take a picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView8"
        android:id="@+id/textView2"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:paddingTop="15dp" />

    <TextView
        android:text="Ask a question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView9"
        android:id="@+id/textView3"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_alignTop="@+id/imageView9"
        android:layout_above="@+id/imageView10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:paddingTop="15dp" />

    <TextView
        android:text="View result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_alignBottom="@+id/imageView10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:paddingTop="15dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/microphone"
        android:layout_marginTop="54dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/imageView8"
        android:focusable="false"
        android:focusableInTouchMode="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/information"
        android:layout_below="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView10"
        android:focusable="false"
        android:focusableInTouchMode="true" />

    <ImageView
        app:srcCompat="@drawable/picture"
        android:layout_marginStart="91dp"
        android:id="@+id/imageView8"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
